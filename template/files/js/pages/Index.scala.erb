package <%= @base_package %>.js.pages

import scalatags.JsDom.all._

import klib.Implicits._
import klib.fp.types._
import pye.{Widget => _, _}
import pye._
import pye.Implicits._
import pye.RouteMatcher._

import <%= @base_package %>.js.helpers.all._

object Index {

  val matcher: RouteMatcher =
    complete { _ =>
      Index().pure[?]
    }

  def apply(): Page =
    Page
      .builder()()
      .noEnv
      .constTitle("Index")
      .standardBody {
        _.pageCenterMiddle {
          Widget.builder.element {
            div(
              h1(S.centered)("<%= @project_name.split('-').map(&:capitalize).join('-') %>"),
            ).render
          }
        }.<%= @project_name.gsub(/-(\w)/){$1.upcase} %>NavBar
      }
      .<%= @project_name.gsub(/-(\w)/){$1.upcase} %>KeyMap
      .ignoreA

}
